import numpy as np
import matplotlib.pyplot as plt

x = np.linspace(0.1, 10, 400) 

y1 = np.log(x)   
y2 = np.exp(x)

plt.figure(figsize=(12, 8))

plt.plot(x, y1, label='y = log(x)')
plt.plot(x, y2, label='y = e^x')

plt.title('Графики функций y = log(x) и y = e^x')
plt.xlabel('x')
plt.ylabel('y')

plt.grid()  
plt.legend()    

plt.xlim(0, 10.5)  
plt.ylim(-3, 20) 
plt.show()

# Первая строка: log(x)

plt.subplot(2, 3, 1)
plt.plot(x, y1, marker='.', markevery=5)
plt.title('log(x), шаг=5')
plt.ylim(-3, 3)

plt.subplot(2, 3, 2)
plt.plot(x, y1, marker='.', markevery=25)
plt.title('log(x), шаг=25')
plt.ylim(-3, 3)

plt.subplot(2, 3, 3)
plt.plot(x, y1, marker='.', markevery=50)
plt.title('log(x), шаг=50')
plt.ylim(-3, 3)

# Вторая строка: exp(x)

start_index = 15  
x_exp = x[start_index:]
y2 = y2[start_index:]

plt.subplot(2, 3, 4)
plt.plot(x_exp, y2, marker='.', markevery=5)
plt.title('exp(x), шаг=5')
plt.ylim(0, 100)

plt.subplot(2, 3, 5)
plt.plot(x_exp, y2, marker='.', markevery=25)
plt.title('exp(x), шаг=25')
plt.ylim(0, 100)

plt.subplot(2, 3, 6)
plt.plot(x_exp, y2, marker='.', markevery=50)
plt.title('exp(x), шаг=50')
plt.ylim(0, 100)

plt.tight_layout()
plt.show()
