import matplotlib.pyplot as plt

# Данные для работы (из изображения)
temperatures = [-5, -3, 2, 10, 18, 22]  # Средняя температура по месяцам (Янв-Июн)
months = ['Янв', 'Фев', 'Мар', 'Апр', 'Май', 'Июн']
income_sources = ['Зарплата', 'Фриланс', 'Инвестиции', 'Аренда']
income_percentages = [65, 15, 12, 8]
orders = [2340, 2560, 2890, 3120]  # Количество заказов в интернет-магазине (Янв-Апр)
os_names = ['Windows', 'macOS', 'Linux', 'Другие']
os_percentages = [68, 17, 9, 6]


# 1. Столбчатая диаграмма средней температуры по месяцам (в горизонтальном виде)
plt.figure(figsize=(10, 6))  # Создаем новую фигуру

plt.barh(months, temperatures)
plt.xlabel("Средняя температура (°C)")
plt.ylabel("Месяц")
plt.title("Средняя температура по месяцам (Январь - Июнь)")
plt.show()

# 2. Круговая диаграмма распределения источников дохода (с выделением наибольшего сегмента)
plt.figure(figsize=(8, 8))  # Создаем новую фигуру

explode = [0.1, 0, 0, 0]  # "Выдвигаем" самый большой сегмент (Зарплата)
plt.pie(income_percentages, labels=income_sources, autopct='%1.1f%%', startangle=90, explode=explode)
plt.title("Распределение источников дохода")
plt.show()


# 3. Столбчатая диаграмма количества заказов по месяцам (Сравнить каждый показатель с суммой всех показателей)

plt.figure(figsize=(8, 6))

total_orders = sum(orders)
order_percentages = [order / total_orders * 100 for order in orders]

plt.bar(months[:4], order_percentages)
plt.xlabel("Месяц")
plt.ylabel("Доля заказов (%)")
plt.title("Доля заказов по месяцам")
plt.show()

# 4. Круговая диаграмма долей операционных систем (в виде кольца)

plt.figure(figsize=(8, 8))

wedgeprops = {"width": 0.4, 'edgecolor': 'w'}  # Ширина кольца и цвет края

plt.pie(os_percentages, labels=os_names, autopct='%1.1f%%', startangle=90, wedgeprops=wedgeprops)

plt.title("Доли операционных систем")
plt.show()
